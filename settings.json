{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "respectGitignore": true,
  "cleanupPeriodDays": 365,
  "env": {
    "DISABLE_TELEMETRY": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "CLAUDE_CODE_EFFORT_LEVEL": "high",
    "CLAUDE_CODE_TEAM_NAME": "iceberg",
    "CLAUDE_CODE_HIDE_ACCOUNT_INFO": "1",
    "CLAUDE_CODE_SUBAGENT_MODEL": "sonnet",
    "CLAUDE_CODE_DISABLE_FEEDBACK_SURVEY": "1",
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1"
  },
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(git status)",
      "Bash(git status *)",
      "Bash(git diff *)",
      "Bash(git diff)",
      "Bash(git log *)",
      "Bash(git branch --show-current)",
      "Bash(git branch -a)",
      "Bash(git branch -r)",
      "Bash(git branch --list *)",
      "Bash(git show *)",
      "Bash(git rev-parse *)",
      "Bash(git ls-remote *)",
      "Bash(git fetch *)",
      "Bash(git remote *)",
      "Bash(git stash list)",
      "Bash(git tag *)",
      "Bash(git config --get *)",
      "Bash(gh pr view *)",
      "Bash(gh pr list *)",
      "Bash(gh pr checks *)",
      "Bash(gh issue view *)",
      "Bash(gh issue list *)",
      "Bash(gh api *)",
      "Bash(gh label list *)",
      "Bash(gh label list)",
      "Bash(python3 .claude/scripts/token_usage.py)",
      "Bash(python3 .claude/skills/branch-validate/scripts/validate_branch.py *)",
      "Bash(python3 .claude/skills/branch-validate/scripts/validate_branch.py)",
      "Bash(python3 .claude/skills/pull-request-labels/scripts/detect_components.py *)",
      "Bash(python3 -m pytest *)",
      "Bash(python3 --version)",
      "Bash(pip list *)",
      "Bash(pip show *)",
      "Bash(pip --version)",
      "Bash(mvn *)",
      "Bash(gradle *)",
      "Bash(npm run lint *)",
      "Bash(npm run test *)",
      "Bash(npm list *)",
      "Bash(npm --version)",
      "Bash(npx *)",
      "Bash(node --version)",
      "Bash(dir *)",
      "Bash(ls *)",
      "Bash(mkdir *)",
      "Bash(type *)",
      "Bash(where *)",
      "Bash(which *)",
      "Bash(cd *)",
      "Bash(pwd)",
      "Bash(echo *)",
      "Bash(cat *)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./**/*.pem)",
      "Read(./**/*.key)",
      "Read(./**/*.p12)",
      "Read(./**/*.jks)",
      "Read(./**/credentials.*)",
      "Read(./**/*secret*)",
      "Read(./**/application-local.yml)",
      "Read(./**/application-local.properties)",
      "Read(~/.ssh/**)",
      "Read(~/.gnupg/**)",
      "Read(~/.aws/**)",
      "Read(~/.azure/**)",
      "Read(~/.config/gh/**)",
      "Read(~/.git-credentials)",
      "Read(~/.docker/config.json)",
      "Read(~/.kube/**)",
      "Read(~/.npmrc)",
      "Read(~/.npm/**)",
      "Read(~/.pypirc)",
      "Read(~/.gem/credentials)",
      "Read(~/Library/Keychains/**)",
      "Read(~/Library/Application Support/**/metamask*/**)",
      "Read(~/Library/Application Support/**/electrum*/**)",
      "Read(~/Library/Application Support/**/exodus*/**)",
      "Read(~/Library/Application Support/**/phantom*/**)",
      "Read(~/Library/Application Support/**/solflare*/**)",
      "Edit(~/.bashrc)",
      "Edit(~/.zshrc)",
      "Edit(~/.ssh/**)",
      "Bash(rm -rf *)",
      "Bash(rm -fr *)",
      "Bash(sudo *)",
      "Bash(mkfs *)",
      "Bash(dd *)",
      "Bash(curl *|bash*)",
      "Bash(wget *|bash*)",
      "Bash(git push --force *)",
      "Bash(git push --force-with-lease *)",
      "Bash(git push -f *)",
      "Bash(git reset --hard *)",
      "Bash(git clean -f *)",
      "Bash(git clean -fd *)",
      "Bash(git branch -D *)",
      "Bash(git checkout .)",
      "Bash(git restore .)",
      "Bash(git add -A)",
      "Bash(git add .)",
      "Bash(git rebase -i *)",
      "Bash(git add -i)"
    ],
    "defaultMode": "default"
  },
  "enableAllProjectMcpServers": false,
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 /Users/wpbastos/.claude/hooks/block-destructive.py"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "python3 /Users/wpbastos/.claude/statusline.py"
  },
  "enabledPlugins": {
    "context7@claude-plugins-official": true,
    "github@claude-plugins-official": true,
    "playwright@claude-plugins-official": true
  },
  "language": "english",
  "spinnerTipsEnabled": false,
  "alwaysThinkingEnabled": true,
  "skipDangerousModePermissionPrompt": true,
  "showTurnDuration": true,
  "terminalProgressBarEnabled": true
}
